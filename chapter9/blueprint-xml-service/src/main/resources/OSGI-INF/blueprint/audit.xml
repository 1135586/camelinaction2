<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:camel="http://camel.apache.org/schema/blueprint"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             ">

  <!-- refer to the audit service from the OSGi Service Registry -->
  <reference id="auditService" interface="camelinaction.AuditService"/>

  <camelContext id="camel" xmlns="http://camel.apache.org/schema/blueprint">

    <!-- trigger the audit for every incoming message -->
    <interceptFrom>
      <bean ref="auditService"/>
    </interceptFrom>

    <!-- the route -->
    <route>
      <from uri="file://target/inbox"/>
      <to uri="file://target/outbox"/>
    </route>

  </camelContext>

</blueprint>
