<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <description>hawtio Oldstuff plugin</description>
  <display-name>hawt.io oldstuff plugin</display-name>

  <!-- the actual values are configured in pom.xml -->
  <context-param>
    <description>Plugin's path on the server</description>
    <param-name>plugin-context</param-name>
    <param-value>${plugin-context}</param-value>
  </context-param>
  <context-param>
    <description>Plugin's name on the server</description>
    <param-name>plugin-name</param-name>
    <param-value>${project.artifactId}</param-value>
  </context-param>
  <context-param>
    <description>Plugin's domain on the server</description>
    <param-name>plugin-domain</param-name>
    <param-value>${plugin-domain}</param-value>
  </context-param>
  <context-param>
    <description>Plugin's script on the server</description>
    <param-name>plugin-scripts</param-name>
    <param-value>${plugin-scripts}</param-value>
  </context-param>

  <!-- listener to bootsrap the plugin -->
  <listener>
    <listener-class>camelinaction.PluginContextListener</listener-class>
  </listener>

</web-app>

